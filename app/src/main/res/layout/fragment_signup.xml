<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="-20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/all_corner_drawable"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:translationZ="2dp">


        <TextView
            fontPath="fonts/OpenSans-Semibold.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="50dp"
            android:text="Lorem ipsum dolor sit amet,"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/Size4"
            tools:ignore="MissingPrefix" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Username"
                android:textColor="@color/colorText"
                android:textSize="@dimen/Size3"
                fontPath="fonts/OpenSans-Semibold.ttf"
                tools:ignore="MissingPrefix"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout

                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/all_corner_drawable"
                    android:elevation="3dp"
                    android:translationZ="2dp">

                    <EditText
                        android:id="@+id/firstName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:hint="First Name"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:paddingLeft="15dp"
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/Size2" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/all_corner_drawable"
                    android:elevation="3dp"
                    android:translationZ="2dp">

                    <EditText
                        android:id="@+id/lastName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:hint="Last Name"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:paddingLeft="15dp"

                        android:textColor="@color/colorText"
                        android:textSize="@dimen/Size2" />

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Company Name"
                android:textColor="@color/colorText"
                android:textSize="@dimen/Size3"
                fontPath="fonts/OpenSans-Semibold.ttf"
                tools:ignore="MissingPrefix"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_margin="10dp"
                android:background="@drawable/all_corner_drawable"
                android:elevation="3dp"
                android:translationZ="2dp">

                <EditText
                    android:id="@+id/company"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:hint="What's your Company Name ?"
                    android:imeOptions="actionNext"
                    android:inputType="textCapWords"
                    android:paddingLeft="15dp"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/Size2" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Email ID"
                android:textColor="@color/colorText"
                android:textSize="@dimen/Size3"
                fontPath="fonts/OpenSans-Semibold.ttf"
                tools:ignore="MissingPrefix"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_margin="10dp"
                android:background="@drawable/all_corner_drawable"
                android:elevation="3dp"
                android:translationZ="2dp">

                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:hint="abc@gamil.com"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="15dp"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/Size2" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Mobile No"
                android:textColor="@color/colorText"
                android:textSize="@dimen/Size3"
                fontPath="fonts/OpenSans-Semibold.ttf"
                tools:ignore="MissingPrefix"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_margin="10dp"
                android:background="@drawable/all_corner_drawable"
                android:elevation="3dp"
                android:orientation="horizontal"
                android:translationZ="2dp">

                <com.hbb20.CountryCodePicker
                    android:id="@+id/ccp_countryCode"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    app:ccpDialog_textColor="#000"
                    app:ccp_arrowColor="@color/colorPrimary"
                    app:ccp_arrowSize="50sp"
                    app:ccp_defaultPhoneCode="91"
                    app:ccp_showArrow="true"
                    app:ccp_showFlag="false"
                    app:ccp_showNameCode="false"
                    app:ccp_textSize="12dp" />




                <View
                    android:layout_width="2dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="#d3d3d3" />

                <EditText
                    android:id="@+id/moblie"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:hint="9999999999"
                    android:imeOptions="actionNext"
                    android:inputType="phone"
                    android:paddingLeft="15dp"
                    android:textColor="@color/colorText"
                    android:textSize="12dp" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Country"
                android:textColor="@color/colorText"
                android:textSize="@dimen/Size3"
                fontPath="fonts/OpenSans-Semibold.ttf"
                tools:ignore="MissingPrefix"
                />

            <RelativeLayout
                android:id="@+id/rel_country_spinner"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_margin="10dp"
                android:background="@drawable/all_corner_drawable"
                android:elevation="1dp"
                android:orientation="horizontal"
                android:translationZ="2dp">

                <!--    <EditText
                        android:id="@+id/country"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:hint="Country"
                        android:imeOptions="actionNext"
                        android:inputType="textCapWords"
                        android:paddingLeft="15dp"
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/Size2" />-->

                <Spinner
                    android:id="@+id/spinner_country"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@+id/spinnerCo_image"
                    android:background="@null" />

                <ImageView
                    android:id="@+id/spinnerCo_image"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="16dp"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/drop_down_menu"

                    />


            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="City"
                android:textColor="@color/colorText"
                android:textSize="@dimen/Size3"
                fontPath="fonts/OpenSans-Semibold.ttf"
                tools:ignore="MissingPrefix"
                />

            <RelativeLayout
                android:id="@+id/rel_city_spinner"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_margin="10dp"
                android:background="@drawable/all_corner_drawable"
                android:elevation="3dp"
                android:translationZ="2dp">

                <!--  <EditText
                      android:id="@+id/city"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:background="@android:color/transparent"
                      android:hint="City"
                      android:imeOptions="actionNext"
                      android:inputType="textCapWords"
                      android:paddingLeft="15dp"
                      android:textColor="@color/colorText"
                      android:textSize="@dimen/Size2" />
                   -->


                <Spinner
                    android:id="@+id/spinner_city"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@+id/spinnerCity_image"
                    android:background="@null" />


                <ImageView
                    android:id="@+id/spinnerCity_image"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="16dp"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/drop_down_menu"/>





            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Address"
                android:textColor="@color/colorText"
                android:textSize="@dimen/Size3"
                fontPath="fonts/OpenSans-Semibold.ttf"
                tools:ignore="MissingPrefix"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_margin="10dp"
                android:background="@drawable/all_corner_drawable"
                android:elevation="3dp"
                android:translationZ="2dp">

                <EditText
                    android:id="@+id/pass"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:hint="What's your Location"
                    android:imeOptions="actionNext"
                    android:inputType="textCapWords"
                    android:paddingLeft="15dp"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/Size2" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Postal Code"
                android:textColor="@color/colorText"
                android:textSize="@dimen/Size3"
                fontPath="fonts/OpenSans-Semibold.ttf"
                tools:ignore="MissingPrefix"

            />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_margin="10dp"
                android:background="@drawable/all_corner_drawable"
                android:elevation="3dp"
                android:translationZ="2dp">

                <EditText
                    android:id="@+id/postCode"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:hint="Let us know your postal code"
                    android:imeOptions="actionNext"
                    android:inputType="textCapWords"
                    android:paddingLeft="15dp"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/Size2" />

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/all_corner_drawable"
                android:elevation="3dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:translationZ="2dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:hint="Your Account/channel/Page link"
                    android:imeOptions="actionNext"
                    android:inputType="textCapWords"
                    android:paddingLeft="15dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/Size2" />
            </LinearLayout>

                <Button
                    fontPath="fonts/OpenSans-Semibold.ttf"
                    android:layout_width="80dp"
                    android:layout_height="55dp"
                    android:background="@drawable/button_gradiant_background"
                    android:text="Next"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/Size4"
                    tools:ignore="MissingPrefix" />

        </LinearLayout>


        <Button
            android:id="@+id/next"
            fontPath="fonts/OpenSans-Semibold.ttf"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/button_gradiant_background"
            android:text="Next"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/Size4"
            tools:ignore="MissingPrefix" />
    </LinearLayout>

</ScrollView>

